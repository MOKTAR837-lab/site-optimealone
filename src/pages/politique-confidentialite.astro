---
import Base from "../layouts/Base.astro";
const SITE = Astro.site?.href ?? "https://optimealhealth.com";
const title = "Politique de confidentialité — Optimeal Health";
const description = "Politique de confidentialité (RGPD) d’Optimeal Health.";
---
<Base {title} {description} canonical={`${SITE}politique-confidentialite`}>
  <main class="mx-auto max-w-screen-md px-4 py-12">
    <h1 class="mb-4 text-2xl font-bold">Politique de confidentialité</h1>
    <p class="text-slate-600">Aucune donnée de santé n’est collectée. Newsletter/contact sur consentement.</p>
  </main>
</Base>
