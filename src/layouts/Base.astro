---
const { title = 'optimealone', description = '' } = Astro.props;
---
<!doctype html>
<html lang="fr">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body style="font-family:system-ui;margin:0">
    <main style="padding:1.5rem;max-width:960px;margin:0 auto">
      <slot />
    </main>
  </body>
</html>
