worker_processes auto;

events { worker_connections 1024; }

http {
  include       /etc/nginx/mime.types;
  default_type  application/octet-stream;

  sendfile on; tcp_nopush on; tcp_nodelay on; keepalive_timeout 65;

  gzip on; gzip_vary on; gzip_proxied any; gzip_comp_level 6;
  gzip_types text/plain text/css text/xml text/javascript application/json application/javascript image/svg+xml;

  # Upstreams = noms des services docker
  upstream web { server optimeal-web:4321; }
  upstream api { server optimeal-api:8000; }

  server {
    listen 80 default_server;
    server_name _;

    client_max_body_size 10m;

    # API -> FastAPI
    location /api/ {
      proxy_pass         http://api/;   # slash final important
      proxy_set_header   Host $host;
      proxy_set_header   X-Real-IP $remote_addr;
      proxy_set_header   X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header   X-Forwarded-Proto $scheme;
      proxy_read_timeout 120s;
    }

    # Web -> Astro SSR
    location / {
      proxy_pass         http://web;
      proxy_http_version 1.1;
      proxy_set_header   Host $host;
      proxy_set_header   X-Real-IP $remote_addr;
      proxy_set_header   X-Forwarded-For $proxy_add_x_forwarded_for;
      proxy_set_header   X-Forwarded-Proto $scheme;
      proxy_set_header   Upgrade $http_upgrade;
      proxy_set_header   Connection "upgrade";
      proxy_read_timeout 120s;
    }

    location = /health {
      access_log off;
      return 200 "healthy`n";
      add_header Content-Type text/plain;
    }
  }
}
